# LLM / OpenAI
OPENAI_API_KEY=enter_your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small


# Milvus (Zilliz Cloud)
MILVUS_URI=enter_your_milvus_uri_here
MILVUS_TOKEN=enter_your_milvus_token_here
MILVUS_COLLECTION=diyoloji_docs
MILVUS_DIM=1536
MILVUS_METRIC=COSINE
MILVUS_INDEX_TYPE=HNSW
MILVUS_HNSW_M=8
MILVUS_HNSW_EFCONSTRUCTION=64
MILVUS_SEARCH_EF=128
MILVUS_DB=default
MILVUS_VECTOR_FIELD=embedding
MILVUS_TEXT_FIELD=text


# Inferans
MAX_CONTEXT_DOCS=6
CHUNK_SIZE=1200
CHUNK_OVERLAP=200

HISTORY_ENABLED=true
HISTORY_DB=./diyoloji_history.sqlite
HISTORY_MAX_TURNS=6 # prompt'a eklenecek son tur sayısı (user+assistant birlikte)
SESSION_TTL_DAYS=7 # eski oturumları silmek için saklama süresi

# LangSmith (LangChain v2 tracing)
LANGCHAIN_TRACING_V2=true          
LANGSMITH_TRACE_INGEST=false
LANGSMITH_ENDPOINT=https://eu.api.smith.langchain.com
LANGSMITH_API_KEY=enter_your_langsmith_api_key_here
LANGSMITH_PROJECT=Diyoloji
OPENAI_API_KEY=enter_your_openai_api_key_here
# Selenium

SELENIUM_DRIVER=chrome
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=20

SERVER_HOST=0.0.0.0
SERVER_PORT=8000
CORS_ORIGINS=*
LOG_LEVEL=INFO

# Chat History
history_db=./diyoloji_history.sqlite
history_enabled=true
session_ttl_days=14

# Guard
GUARD_SOFT_FAIL=true
